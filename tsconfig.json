{
    "compilerOptions": {
      "types": [
        "node",
        "jest"
      ],
      "target": "es2015",
      "module": "commonjs",
      "declaration": true,
      "moduleResolution": "node",
      "noImplicitAny": true,
      "outDir": "./lib",
      "preserveConstEnums": true,
      "removeComments": false,
      "pretty": true,
      "sourceMap": true,
      "newLine": "lf"
    },
    "include": [
      "src/**/*.ts",
      "__tests__/**/*.ts"
    ],
    "exclude": [
      "lib",
      "node_modules",
      "**/__mocks__/*"
    ]
  }
